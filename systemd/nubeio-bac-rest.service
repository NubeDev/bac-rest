[Unit]
Description=Flask Application for Nube Rest API
After=network.target

[Service]
Type=simple
User=<user>
WorkingDirectory=<working_dir>
ExecStart=<working_dir>/venv/bin/gunicorn -b 0.0.0.0:1515 --log-level=DEBUG --worker-class gevent -w 1 run:app -e data_dir=/data/bac-rest
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=bac-rest

[Install]
WantedBy=multi-user.target
